<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.nxp.cardreader.MainActivity">


    <ImageButton
        android:id="@+id/camera_scan"
        android:layout_width="80px"
        android:layout_height="80px"
        android:onClick="qr_scan"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:contentDescription="QR"
        android:drawable="@drawable/photo_camera"
        android:state_pressed="false" />

    <TextView
        android:id="@+id/tvLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scrollbars="vertical"
        android:text="Here is the info of your card:"
        android:textStyle="normal"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>


</RelativeLayout>
